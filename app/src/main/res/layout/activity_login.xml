<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keertech.regie_phone.LoginActivity"
    android:background="@drawable/backgroud"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_text"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="304dp"
        android:layout_height="45dp"
        android:hint="@string/username"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:id="@+id/username_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="number"/>

    <EditText
        android:id="@+id/password_et"
        android:layout_width="304dp"
        android:layout_height="45dp"
        android:hint="@string/password"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/username_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/auto_login_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/password_et"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/login_tv"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintRight_toLeftOf="@+id/auto_login_tv"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autologin"
        android:textSize="16sp"
        android:id="@+id/auto_login_tv"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/password_et"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/login_tv"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/password_et" />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="304dp"
        android:layout_height="37dp"
        android:background="@drawable/loginbutton"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/password_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
