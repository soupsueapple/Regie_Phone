<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/problem_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题编号"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="督办类别"
        android:layout_alignBaseline="@+id/problem_no_tv"
        android:layout_alignBottom="@+id/problem_no_tv"
        android:layout_toRightOf="@+id/problem_no_tv"
        android:layout_toEndOf="@+id/problem_no_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/department_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="督办部门"
        android:layout_alignBaseline="@+id/type_tv"
        android:layout_alignBottom="@+id/type_tv"
        android:layout_toRightOf="@+id/type_tv"
        android:layout_toEndOf="@+id/type_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/principal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="负责人"
        android:layout_below="@+id/problem_no_tv"
        android:layout_alignLeft="@+id/problem_no_tv"
        android:layout_alignStart="@+id/problem_no_tv"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:layout_alignBaseline="@+id/principal_tv"
        android:layout_alignBottom="@+id/principal_tv"
        android:layout_toRightOf="@+id/principal_tv"
        android:layout_toEndOf="@+id/principal_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="督办内容"
        android:layout_below="@+id/principal_tv"
        android:layout_alignLeft="@+id/principal_tv"
        android:layout_alignStart="@+id/principal_tv"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content_tv"
        android:background="@color/gray_black"
        android:layout_margin="10dp"></LinearLayout>

</RelativeLayout>
