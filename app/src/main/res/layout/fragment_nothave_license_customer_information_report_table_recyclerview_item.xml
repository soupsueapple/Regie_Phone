<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/shopname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店招名称"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经营人姓名"
        android:layout_alignBaseline="@+id/shopname_tv"
        android:layout_alignBottom="@+id/shopname_tv"
        android:layout_toRightOf="@+id/shopname_tv"
        android:layout_toEndOf="@+id/shopname_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话"
        android:layout_alignBaseline="@+id/name_tv"
        android:layout_alignBottom="@+id/name_tv"
        android:layout_toRightOf="@+id/name_tv"
        android:layout_toEndOf="@+id/name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/is_intent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有无办证意向"
        android:layout_below="@+id/shopname_tv"
        android:layout_alignLeft="@+id/shopname_tv"
        android:layout_alignStart="@+id/shopname_tv"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/report_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提报时间"
        android:layout_alignBaseline="@+id/is_intent_tv"
        android:layout_alignBottom="@+id/is_intent_tv"
        android:layout_toRightOf="@+id/is_intent_tv"
        android:layout_toEndOf="@+id/is_intent_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/measure_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="处理结果"
        android:layout_below="@+id/is_intent_tv"
        android:layout_alignLeft="@+id/is_intent_tv"
        android:layout_alignStart="@+id/is_intent_tv"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/inspect_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调查时间"
        android:layout_alignBaseline="@+id/measure_result_tv"
        android:layout_alignBottom="@+id/measure_result_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:layout_alignStart="@+id/name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_search"
        android:layout_below="@+id/phone_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_black"
        android:layout_margin="10dp"
        android:layout_below="@id/measure_result_tv"></LinearLayout>

</RelativeLayout>
