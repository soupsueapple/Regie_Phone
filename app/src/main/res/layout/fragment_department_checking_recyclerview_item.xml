<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl">

    <TextView
        android:id="@+id/start_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-04-19"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/end_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -- 2017-04-20"
        android:layout_alignBaseline="@+id/start_date_tv"
        android:layout_alignBottom="@+id/start_date_tv"
        android:layout_toRightOf="@+id/start_date_tv"
        android:layout_toEndOf="@+id/start_date_tv" />

    <TextView
        android:id="@+id/department_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="青山白玉山"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/start_date_tv"
        android:layout_alignLeft="@+id/start_date_tv"
        android:layout_alignStart="@+id/start_date_tv" />

    <TextView
        android:id="@+id/principal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="负责人: 马琳琳"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/department_tv"
        android:layout_alignBottom="@+id/department_tv"
        android:layout_toRightOf="@+id/start_date_tv"
        android:layout_toEndOf="@+id/start_date_tv" />

    <TextView
        android:id="@+id/checking_people_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查人: 郑明浩, 刘靖怡, 郑铎"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/department_tv"
        android:layout_alignLeft="@+id/department_tv"
        android:layout_alignStart="@+id/department_tv" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checking_people_tv"
        android:layout_alignLeft="@+id/checking_people_tv"
        android:layout_alignStart="@+id/checking_people_tv"
        android:layout_marginTop="10dp"
        android:id="@+id/customer_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经营户"/>

        <TextView
            android:id="@+id/customer_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0/0"
            android:textColor="@color/gray_green"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nothas_license_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/customer_ll"
        android:layout_alignLeft="@+id/principal_tv"
        android:layout_alignStart="@+id/principal_tv"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无证户"/>

        <TextView
            android:id="@+id/nothas_license_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0/0"
            android:textColor="@color/gray_green"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已结束"
        android:layout_above="@+id/checking_people_tv"
        android:layout_alignRight="@+id/linearLayout13"
        android:layout_alignEnd="@+id/linearLayout13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nothas_license_ll"
        android:layout_margin="10dp"
        android:background="@color/gray_black"
        android:id="@+id/linearLayout13"></LinearLayout>

</RelativeLayout>
